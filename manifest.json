
{
    "manifest_version": 2,
    "name": "blocko",
    "version": "1",
    "description": "block unwanted website",

    "background": {
        "scripts": ["main.js","timer.js"]
    },

    "permissions": ["tabs","storage"],

    "options_ui": {
        "page": "config.html",
        "open_in_tab": false
    },

    "browser_action": {
        "default_title": "blocko your way to block ! ",
        "default_popup": "popup.html"
    }
    
}