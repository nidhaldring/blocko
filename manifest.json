
{
    "manifest_version": 2,
    "name": "blocko",
    "version": "1",
    "description": "block unwanted website",

    "icons": {
        "16": "icons/16.png",
        "24": "icons/24.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "64": "icons/64.png"
    },

    "background": {
        "scripts": ["timer.js"]
    },

    "permissions": ["tabs","storage"],

    "options_ui": {
        "page": "config.html",
        "open_in_tab": false
    },

    "browser_action": {
        "default_title": "blocko your way to block !",
        "default_popup": "popup.html"
    }
    
}