
{
    "manifest_version": 2,
    "name": "blocko",
    "version": "1",
    "description": "block unwanted website",

    "icons": {
        "16": "icons/16.png",
        "24": "icons/24.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "64": "icons/64.png"
    },

    "background": {
        "scripts": ["js/timer.js","js/events.js"]
    },

    "permissions": ["storage"],

    "options_ui": {
        "page": "html/config.html",
        "open_in_tab": true
    },

    "browser_action": {
        "default_title": "blocko your way to stay productive !",
        "default_popup": "html/popup.html"
    }
    
}